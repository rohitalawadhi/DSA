int fact[n + 1];
fact[0] = 1;
for(int i = 1; i <= n; i++){
  fact[i] = i * fact[i - 1];
}

cout<<fact[n] / fact[n - k];


-----------------------------


int p = 1;
for(int i = 0; i < k; i++)
{
 p = p * (n - 1);
}
